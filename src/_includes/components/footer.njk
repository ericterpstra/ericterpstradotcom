<footer class="site-footer">
    <div class="footer-content">
        <div class="social-links">
            {% if site.social.twitter %}
            <a href="{{ site.social.twitter.url }}" target="_blank" rel="noopener noreferrer" class="social-link">
                <span class="social-icon">𝕏</span>
                <span class="social-text">{{ site.social.twitter.handle }}</span>
            </a>
            {% endif %}
            
            {% if site.social.linkedin %}
            <a href="{{ site.social.linkedin.url }}" target="_blank" rel="noopener noreferrer" class="social-link">
                <span class="social-icon">in</span>
                <span class="social-text">LinkedIn</span>
            </a>
            {% endif %}
            
            {% if site.social.github %}
            <a href="{{ site.social.github.url }}" target="_blank" rel="noopener noreferrer" class="social-link">
                <span class="social-icon">GH</span>
                <span class="social-text">GitHub</span>
            </a>
            {% endif %}
        </div>
    </div>
</footer>
